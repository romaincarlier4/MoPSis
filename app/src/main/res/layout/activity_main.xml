<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity"
    android:background="@color/White">

    <RelativeLayout
        android:id="@+id/mainPage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"
        android:background="@color/White">

        <TextView
            android:id="@+id/nomApp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/opensans"
            android:gravity="center_horizontal"
            android:text="@string/app_name"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="25sp" />


        <ImageButton
            android:id="@+id/settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/White"
            android:src="@drawable/settings"
            android:contentDescription="@string/page3"
            android:layout_alignRight="@id/nomApp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginEnd="15dp"
            android:layout_alignEnd="@id/nomApp" />

        <View
            android:id="@+id/bar"
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:layout_below="@id/nomApp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="#000000" />



        <com.google.android.material.tabs.TabLayout

            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/bar"
            android:background="#FFFFFF"
            app:tabIndicatorColor="#040404">

            <com.google.android.material.tabs.TabItem
                android:id="@+id/pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:icon="@drawable/pay"/>

            <com.google.android.material.tabs.TabItem
                android:id="@+id/graphics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:icon="@drawable/graph" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/users"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:icon="@drawable/person" />


        </com.google.android.material.tabs.TabLayout>


        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/toolbar"/>


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
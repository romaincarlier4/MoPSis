<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/century_regular"
            android:text="Welcome to MoPSis loan simulation."
            android:textColor="@color/black"
            android:textSize="40sp"
            android:textAlignment="center"
            android:layout_marginTop="150dp"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/whatname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/century_regular"
            android:text="What's your name ?"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textAlignment="center"
            android:layout_marginTop="280dp"
            android:gravity="center_horizontal"
            android:layout_centerHorizontal="true"/>

        <EditText
            android:id="@+id/nameFirstTime"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Your name"
            android:layout_below="@id/whatname"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:fontFamily="@font/century_regular"
            android:textAlignment="center"
            android:gravity="center_horizontal" />

        <Button
            android:id="@+id/letsgo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Let's go !"
            android:textSize="20sp"
            android:textColor="@color/White"
            android:fontFamily="@font/century_regular"
            android:background="@color/colorPrimary"
            android:padding="10dp"
            android:layout_below="@id/nameFirstTime"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

</LinearLayout>